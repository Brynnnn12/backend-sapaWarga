generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
}

// Model untuk tabel users - Menyimpan data pengguna (warga dan admin)
model User {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(100)
  email     String   @unique @db.VarChar(100)
  password  String   @db.VarChar(255)
  role      Role     @default(USER)
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  complaints Complaint[]
  comments   Comment[]

  @@map("users")
}

// Model untuk tabel complaints - Menyimpan data laporan pengaduan
model Complaint {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id")
  title       String   @db.VarChar(200)
  description String   @db.Text
  image       String?  @db.VarChar(255) // Optional karena mungkin tidak selalu ada foto
  status      Status   @default(PENDING)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments Comment[]

  @@map("complaints")
}

// Model untuk tabel comments - Menyimpan komentar/tanggapan pada laporan
model Comment {
  id          Int      @id @default(autoincrement())
  complaintId Int      @map("complaint_id")
  userId      Int      @map("user_id")
  message     String   @db.Text
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  complaint Complaint @relation(fields: [complaintId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("comments")
}

// Enum untuk role user
enum Role {
  ADMIN
  USER
}

// Enum untuk status complaint
enum Status {
  PENDING
  PROSES
  SELESAI
}
